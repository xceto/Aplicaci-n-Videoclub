<%if notice.present? %>
	<div class="alert alert-success alert-dismissible" role="alert" style="margin-top: 20px">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  <strong>Success! </strong> <%= notice %>
	</div>
<%elsif alert.present? %>	
	<div class="alert alert-danger alert-dismissible" role="alert" style="margin-top: 20px">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  <strong>Error! </strong> <%= alert %>
	</div>
<%end%>

<h3 style="margin-bottom: 30px">Agregar Nueva Serie</h3>
<div style="width: 50%; margin-bottom: 2%">
	<%= form_for(@serie) do |f| %>
	  <div class="form-group">
	    <%= label_tag :titulo, 'Titulo '%>
	    <%= f.text_field :titulo ,class: 'form-control'%>
	  </div>

	  <div class="form-group">
	    <%= label_tag :genero, 'Genero'%>
	    <%= f.text_field :genero ,class: 'form-control'%>
	  </div>

	  <div class="form-group">
	    <%= label_tag :precio_arriendo, 'Precio Arriendo'%>
	    <%= f.number_field :precio_arriendo ,class: 'form-control'%>
	  </div>

	  <div class="form-group">
	    <%= label_tag :temporada, 'Cantidad Temporadas'%>
	    <%= f.number_field :temporada ,class: 'form-control'%>
	  </div>

	  <%= submit_tag "Guardar", class: 'btn btn-success btn-lg btn-submit' %>
	<%end%></div>

<%= link_to 'Volver', serials_path , class: "btn btn-info", style: "margin-bottom: 20px"%>