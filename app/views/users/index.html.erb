<%if notice.present? %>
  <div class="alert alert-success alert-dismissible" role="alert" style="margin-top: 20px">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Success! </strong> <%= notice %>
  </div>
<%elsif alert.present? %> 
  <div class="alert alert-danger alert-dismissible" role="alert" style="margin-top: 20px">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Error! </strong> <%= alert %>
  </div>
<%end%>

<h3 style="margin-bottom: 20px">Tabla Usuarios</h3>
<%= link_to 'Agregar Nuevo Usuario ', new_user_path, class: "btn btn-info", style: "margin-bottom: 20px", method: :get%>

<% if @usuarios.present? %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre</th>
          <th scope="col">Email</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <th scope="row"><%= usuario.id%></th>
          <td><%= usuario.nombre%></td>
          <td><%= usuario.email%></td>
          <td>
            <%= link_to "editar",edit_user_path(usuario.id)%> |
            <%= link_to "borrar",user_path(usuario.id), method: :delete, data: { confirm: 'Esta Seguro que quiere eliminar?' }%>         
          </td>
        </tr>
      <%end%>  
      </tbody>
    </table>
  <%= will_paginate @usuarios, renderer: BootstrapPagination::Rails %>
<% else %>
  <div class="alert alert-info alert-dismissible" role="alert" style="margin-top: 20px">
    Actualmente no hay usuarios guardados
  </div>
<% end %>





