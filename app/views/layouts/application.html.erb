<!DOCTYPE html>
<html>
<head>
  <title>Innk</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="background-color: #f1f1f1">

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>">Peliculas/Series</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="row" style="margin: 0">
  <div class="col-xs-6 col-md-2" >
		<div class="list-group">
		  <a href="<%= users_path %>" class="list-group-item">Usuarios</a> <!-- active -->
		  <a href="<%= peliculas_path %>" class="list-group-item">Peliculas</a>
		  <a href="<%= serials_path %>" class="list-group-item">Series</a>
		  <a href="<%= root_path %>" class="list-group-item">Arriendo</a>
		</div>
  </div>
  <div class="col-xs-11 col-md-9" style="background-color: white"> 
    <%= yield %>
  </div>
</div>

</body>
</html>
